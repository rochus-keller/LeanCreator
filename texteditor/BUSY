let lib_conf : Config {
	.include_dirs += ..
    .defines += [ "TEXTEDITOR_LIBRARY" "QT_NO_PRINTER" "QT_NO_SQL" "QT_NO_QML"
				  "QT_STATICPLUGIN" # enable static load when compiling plugin, so Q_IMPORT_PLUGIN can see it
	 ]
	.configs += ^cpp11conf
}

let run_rcc : Rcc {
	.sources += ./texteditor.qrc
	.deps += ^qt.copy_rcc
}

