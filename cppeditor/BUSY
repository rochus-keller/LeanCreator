let lib_conf : Config {
	.include_dirs += ..
	.defines += [ "CPPEDITOR_LIBRARY" "QT_NO_PRINTER" "QT_NO_SQL" "QT_NO_HELP" "QT_NO_QML" 
				  "QT_STATICPLUGIN" 
	 ]
	.configs += ^cpp11conf
}

let run_rcc : Rcc {
	.sources += [ 
		./cppeditor.qrc
	]
	.deps += ^qt.copy_rcc
}

let run_moc : Moc {
	.sources += [
