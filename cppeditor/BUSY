		./cppfunctiondecldeflink.h
		./cppincludehierarchy.h
		./cppinsertvirtualmethods.h
		./cpppreprocessordialog.h
		./cppquickfix.h
		./cppoutline.h
		./cpplocalrenaming.h
	]
}

let run_uic : Uic {
	.sources += [
		./cpppreprocessordialog.ui
    	./cppcodemodelinspectordialog.ui
   	]
}

